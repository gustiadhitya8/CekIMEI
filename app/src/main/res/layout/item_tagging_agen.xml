<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/yellow_normal"
        app:strokeWidth="0.8dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/textMSISDNAgen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6281234567890"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textNamaAgen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Agen MOBO"
                        android:textStyle="bold"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/textEmailAgen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ahsinmanan@gmail.com"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending Active"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="04 Feb 2024 19:28:28"
                        android:textSize="9sp"
                        android:textColor="@color/gray_dark"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>